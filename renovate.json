{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr",
      "requiredStatusChecks": null,
      "branchProtectionRules": {
        "enabled": true,
        "requiredApprovingReviewCount": 0
      }
    }
  ]
}
